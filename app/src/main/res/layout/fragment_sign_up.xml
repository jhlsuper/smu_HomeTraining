<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUpFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".fragment.SignUpFragment">

    <include
        android:id="@+id/include3"
        layout="@layout/fragment_tool_bar"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_logo2"
        app:layout_constraintTop_toBottomOf="@id/include3"
        app:layout_constraintBottom_toTopOf="@id/layout_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include3">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="─── 닉네임 ───"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blue_grey_400"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@id/et_rg_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            tools:ignore="HardcodedText,TextViewEdits" />

        <EditText
            android:id="@+id/et_rg_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:elevation="5dp"
            android:background="@drawable/signup_input"
            app:layout_constraintEnd_toEndOf="@id/guideline_0.65"
            app:layout_constraintHorizontal_bias="0.282"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="────  ID  ────"
            android:textColor="@color/blue_grey_400"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/et_rg_name"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_rg_id"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:textColor="@color/gray"
            android:elevation="5dp"
            android:background="@drawable/signup_input"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/et_rg_name"
            app:layout_constraintStart_toStartOf="@+id/et_rg_name"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="────  PW  ────"
            android:textColor="@color/blue_grey_400"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/et_rg_id"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_rg_password"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray"
            android:background="@drawable/signup_input"
            android:elevation="5dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/et_rg_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_rg_name"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="HardcodedText,TextFields" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text=" PW를 다시 입력하세요 "
            android:textColor="@color/blue_grey_400"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/et_rg_password"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_rg_passwordcheck"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signup_input"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="@+id/et_rg_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_rg_name"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="──── 소속 ────"
            android:textColor="@color/blue_grey_400"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/et_rg_passwordcheck"
            tools:ignore="HardcodedText" />

        <AutoCompleteTextView
            android:id="@+id/et_rg_belong"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:completionThreshold="2"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signup_input"
            android:elevation="5dp"
            android:inputType="textPersonName"
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/et_rg_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_rg_name"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="──── 나이 ────"
            android:textColor="@color/blue_grey_400"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/et_rg_belong"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_rg_age"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signup_input"
            android:elevation="5dp"
            android:inputType="textPersonName"
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/et_rg_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_rg_name"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="──── 성별 ────"
            android:textColor="@color/blue_grey_400"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/et_rg_age"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_rg_gender"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signup_input"
            android:elevation="5dp"
            android:inputType="textPersonName"
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/et_rg_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_rg_name"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginBottom="3dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="키 "
        android:layout_marginTop="20dp"
        android:textColor="@color/blue_grey_400"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@id/et_rg_height"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_linear"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/et_rg_height"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:ems="10"
        android:hint="cm"
        android:inputType="number"
        android:textSize="15sp"
        android:background="@drawable/signup_input"
        android:elevation="5dp"
        app:layout_constraintEnd_toStartOf="@id/textView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/textView10"
        app:layout_constraintTop_toTopOf="@id/textView10"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="몸무게 "
        android:textColor="@color/blue_grey_400"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/et_rg_weight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/et_rg_height"
        app:layout_constraintTop_toBottomOf="@id/layout_linear"
        tools:ignore="HardcodedText" />


    <EditText
        android:id="@+id/et_rg_weight"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="kg"
        android:inputType="number"
        android:background="@drawable/signup_input"
        android:elevation="5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/textView9"
        app:layout_constraintTop_toTopOf="@id/textView10"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/btn_register_done"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Join"
        android:background="@drawable/signup_join"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView9"
        tools:ignore="HardcodedText" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.095" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_0.65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />


</androidx.constraintlayout.widget.ConstraintLayout>